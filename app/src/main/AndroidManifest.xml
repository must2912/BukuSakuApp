        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.SplashScreen.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.Home.HomeActivity" />
        <activity
            android:name=".Activity.Login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activity.ChangePass.ChangePassAcitvity" />
        <activity android:name=".Activity.Pelanggaran.PelanggaranActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".Activity.Settings.SettingActivity" />
        <activity android:name=".Activity.TambahPoin.TambahPoinActivity" />
        <activity android:name=".Activity.Peraturan.DetailPasalActivity" />
        <activity android:name=".Activity.BukaFitur.BukaFiturActivity"
