<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/TxtJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Aktivasi Akun"
        android:textColor="@color/white"
        android:textSize="12pt" />

    <customfont.MyEditText
        android:layout_centerHorizontal="true"
        android:id="@+id/EdGantiEmail"
        android:layout_below="@id/TxtJudul"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_height="50dp"
        android:hint="Email"
        />

    <customfont.MyEditText
        android:layout_centerHorizontal="true"
        android:id="@+id/EdGantiPass"
        android:layout_below="@id/EdGantiEmail"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_height="50dp"
        android:hint="Password"
        android:inputType="textPassword"
        />

    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@id/EdGantiPass"
        android:id="@+id/btngantipass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="22dp"
        android:background="@drawable/btnborder"
        android:text="Buka" />

</RelativeLayout>
